  <label for="username">Username</label>                      
	<input type="text" alt="The username you chose when signing-up for
		the site." id="username" name="username">
</div>                                  

<div class="text">
  <label for="password">Password</label>                     
	<input type="text" alt="The password you chose when signing-up for
		the site." id="password" name="password">
</div>                                  
				
